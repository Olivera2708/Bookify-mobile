<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/account_rating"
        layout="@layout/rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:id="@+id/comment_section"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/account_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            layout="@layout/comment"/>
        <include
            layout="@layout/comment"/>
        <include
            layout="@layout/comment"/>
    </LinearLayout>

    <Button
        android:id="@+id/button_block"
        android:layout_width="150dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="16dp"
        android:padding="0sp"
        android:text="@string/more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/comment_section" />
</androidx.constraintlayout.widget.ConstraintLayout>