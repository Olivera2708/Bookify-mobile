<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="14dp"
    android:paddingVertical="7dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingTop="8dp"
            android:paddingHorizontal="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@color/battleship">

            <Button
                android:id="@+id/editDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/calendar"
                android:backgroundTint="@color/caribbean"
                android:drawableTint="@color/white"
                android:text="12.5.2023. - 16.5.2023."
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/peopleIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/editDate"
                app:layout_constraintEnd_toStartOf="@id/peopleText"
                app:layout_constraintStart_toEndOf="@+id/editDate"
                app:layout_constraintTop_toTopOf="@+id/editDate"
                app:srcCompat="@drawable/person"
                app:tint="@color/caribbean" />

            <EditText
                android:id="@+id/peopleText"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:inputType="number"
                android:text="2"
                android:background="@null"
                android:textColor="@color/caribbean"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/peopleIcon"
                app:layout_constraintTop_toTopOf="@+id/peopleIcon"
                app:layout_constraintStart_toEndOf="@+id/peopleIcon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="354 EUR"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginEnd="14dp"
                app:layout_constraintBottom_toBottomOf="@+id/button2"
                app:layout_constraintEnd_toStartOf="@+id/button2"
                app:layout_constraintTop_toTopOf="@+id/button2" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingHorizontal="30sp"
                android:paddingVertical="0sp"
                android:text="@string/reserve"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editDate" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>